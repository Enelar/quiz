<p><%= this.q.data %></p>  

<form action = "api/questions/saveAnswer" method = "post">
<%
var isMulti = "radio";
if (this.q.isMulti == "t")
  isMulti = "checkbox";
var name = this.q.id + "[]";
  for (var i in this.a)
  {
    if (this.q.isMulti != "t")
      name = i;
%>      
  <input type = "<%= isMulti %>" name = "<%= name %>" value = "<%= this.a[i].id %>"><nobr><%= this.a[i].data %> </nobr> 
<%
  }
%>
  <input type = "hidden" name = "qId" value = "<%= this.q.id %>">
  <input type = "hidden" name = "tId" value = "<%= this.t %>">
  <input type = "hidden" name = "isMulti" value = "<%= this.q.isMulti %>">
  <input type = "submit">
</form>
<% this.Defer(function()
{  
  this.first().next().ajaxForm(function(){});  
})%>