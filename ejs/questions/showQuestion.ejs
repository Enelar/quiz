<h3><%= this.question.data %></h3>  

<form action = "api/questions/saveAnswer" method = "post" role="form">
<%
var isMulti = "radio";
if (this.question.isMulti == "t")
{
  isMulti = "checkbox";
}
  for (var i in this.answers)
  {
%>
  <div class = "checkbox">
    <label>
      <input type = "<%= isMulti %>" name = "answ[]" value = "<%= this.answers[i].id %>"> <%= this.answers[i].data %> 
    </label>
  </div>
<%
  }
%>
  <input type = "hidden" name = "questionId" value = "<%= this.question.id %>">
  <button type="submit" class="btn btn-default">Submit</button>
</form>
<% this.Defer(function()
{
  this.first().next().ajaxForm(function(){});
})%>